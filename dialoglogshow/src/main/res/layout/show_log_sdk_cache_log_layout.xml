<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:background="#CCFFFFFF"
    android:orientation="vertical">


    <TextView
        android:id="@+id/show_app_dialog_cache_file_log_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2E7F2"
        android:lineHeight="20dp"
        android:paddingHorizontal="6dp"
        android:paddingVertical="6dp"
        android:textColor="#0000ff"
        android:textSize="14dp"
        tools:text="本地文件展示\n   你好本地文件展示\n      你好本地文件展示" />

    <TextView
        android:id="@+id/show_app_dialog_cache_file_log_tv_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_drive_file_move_rtl_24_file_back"
        android:paddingVertical="8dp"
        android:paddingStart="6dp"
        android:paddingEnd="20dp"
        android:text="返回上一级 "
        android:textColor="#229822"
        android:textSize="14dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_app_dialog_cache_file_log_review"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:paddingStart="10dp" />

    <TextView
        android:id="@+id/show_app_dialog_confirm_btnok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="关闭弹框"
        android:textAllCaps="true"
        android:textColor="#59B47B"
        android:textSize="16dp" />

</LinearLayout>