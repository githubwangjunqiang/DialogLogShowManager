<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:background="#CCFFFFFF"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/app_dialog_httplog_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="接口数据"
                android:textColor="@color/sdk_item_dialog_http_tab_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_tv_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="自定义设置"
                android:textColor="@color/sdk_item_dialog_http_tab_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="本地数据"
                android:textColor="@color/sdk_item_dialog_http_tab_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="Push数据"
                android:textColor="@color/sdk_item_dialog_http_tab_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="个人信息"
                android:textColor="@color/sdk_item_dialog_http_tab_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="其他信息"
                android:textColor="@color/sdk_item_dialog_http_tab_text_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/show_sdk_id_dialog_http_log_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/show_sdk_id_dialog_http_log_tvback"
                android:gravity="center"
                android:padding="10dp"
                android:text="分享"
                android:textColor="#EF7D36"
                android:textSize="13dp" />
        </LinearLayout>

    </HorizontalScrollView>


    <View
        android:id="@+id/show_app_dialog_confirm_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C8C8C8" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp">

        <FrameLayout
            android:id="@+id/setting_config"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/show_app_dialog_httplog_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/show_app_dialog_httplog_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>


    <View
        android:id="@+id/show_app_dialog_confirm_view_line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#C8C8C8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/show_app_dialog_httplog_currentdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="当前日期："
            android:textColor="#333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/show_app_dialog_httplog_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="上一天"
            android:textColor="#333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/show_app_dialog_httplog_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="下一天"
            android:textColor="#333333"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/show_app_dialog_confirm_btnok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="Close"
            android:textAllCaps="true"
            android:textColor="#59B47B"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>